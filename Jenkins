pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                script{
                    sh '''
                    touch .env
                    echo "TOKEN_GIT=\"$TOKEN_GIT\"" >> .env
                    bash docker_build.bash "$TOKEN_DOCKER"
                    '''
                }
            }
        }
    }
    post {
        always {
            deleteDir()
        }
        success {
            script{
                sh '''
                echo "" >> ca.crt
                curl --cacert ca.crt -H "Authorization: Bearer " -X GET https://$KUBERNETES_SERVICE_HOST/apis/apps/v1/namespaces/operation/deployments/products/scale
                '''
            }
        }
    }
}