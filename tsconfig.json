{
    "compilerOptions": {
        "lib": ["es5", "es6", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "removeComments": true,
        "baseUrl": "./",
        "paths": {
            "@entities-lib/*": ["./../entities-lib/*"],
            "@config-lib/*": ["./../config-lib/*"],
            "@commons/*": ["./src/commons/*"],
            "@root/*": ["./*"]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "incremental": true,
        "types": ["node"],
        "typeRoots": ["./node_module/@types", "./src/types"]
    },
    "include": ["src/**/*", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
